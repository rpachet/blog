<h2>Listes des posts</h2>
<%= link_to [:new, :post], class: "btn btn-primary" do %>
  Add post
<% end %>
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Publication Date</th>
      <th scope="col">header</th>
      <th scope="col">file</th>
      <th scope="col">Author</th>

      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
  <% @posts.all.each do |post|%>
  <tr>
    <td>
      <%= link_to(post) do %>
        <%= post.title %>
      <% end %>
      </td>
    <td><%= post.publication_date%></td>
    <td><%= post.header%></td>
    <td><%= image_tag post.file.thumb%></td>
    <td>
      <%= link_to(post.user) do %>
        <%= post.user.first_name %>
      <% end %>
    </td>
    <td>
      <%= link_to [:edit, post], class: "btn btn-primary" do %>
        Update
      <% end %>
      <%= link_to post, method: :delete, data: {confirm: "T'est sur ?"}, class: "btn btn-danger" do %>
        Delete
      <% end %>
    </td>
  </tr>
  <%end%>
</tbody>

</table>
